datasource db {
    // could be postgresql or mysql
    provider = "postgresql"
    url      =  env("DATABASE_URL")
}

generator db {
    provider = "go run github.com/prisma/prisma-client-go"
    output           = "internal/infraStructure/prismaClient"
    package          = "prisma"

}

model Faq {
    id Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    question     String
    answer      String
    status Boolean

}

model User {
    id Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    name String
    surname String 
    email String @unique
    password String
    status Boolean
    profile Profile?
}
model Profile {
    id Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    image String
    address String
    phone String
    user User @relation(fields: [userId],references: [id])
    userId Int 
}